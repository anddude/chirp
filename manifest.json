{
"manifest_version": 3,
"name": "Chirp",
"version": "1.0",
"description" : "Birder identifier game",
"content_scripts": [
    {
        "matches": ["<all_urls>"],
        "css": ["style.css"],
        "js": ["./content.js"]
    }
]
,

"icons":
    {
    "16": "/assets/images/icon/bird_icon_16x16.png",
    "32": "assets/images/icon/bird_icon_32x32.png",
    "48": "assets/images/icon/bird_icon_48x48.png",
    "128": "assets/images/icon/bird_icon_128x128.png"
    },
"web_accessible_resources": [
{
    "resources": [
        "index.html"
    ]
}
],
"permissions": [ "storage", "alarms", "notifications", "activeTab", "webNavigation" ],
"host_permissions": ["<all_urls>"],
"background": {
    "service_worker": "background.js",
    "type": "module"
},
"action":{
//we r doing takover, no pop-ups!
    "default_title": "Chrip!", 
    "run_at": "document_start"
  }

}

// cynthia used "webNavigation" and "activeTab" in permisions and used .js files and "run_at": "document_start" in content_Scripts

